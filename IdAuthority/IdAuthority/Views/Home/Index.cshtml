@using IdAuthority.Models
@using Microsoft.AspNet.Facebook.Models
@model MyAppUser
@{
    ViewBag.Title = "Home Page";
}
<div ng-app="app">
    <article class="intro">
        <span id="profilePicture">
            @if (Model.ProfilePicture != null && Model.ProfilePicture.Data != null)
            {
                <img src="@Model.ProfilePicture.Data.Url" />
            }
        </span>
        <h3>Welcome @Model.Name</h3>
        <label>Email: @Model.Email</label>
    </article>

    <div ng-controller="IndexController">
                
        <article id="content">
            <div class="left">
                <h4>Cadastre sua especialidade !</h4>
                <br>
                <div ng-repeat="i in itens">
                    <label>
                        <input type="checkbox" ng-model="i.selecionado"/>
                        {{i.nome}}
                    </label>
                    <br>
                </div>


