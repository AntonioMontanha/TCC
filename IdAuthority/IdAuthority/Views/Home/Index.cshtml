@using IdAuthority.Models
@using Microsoft.AspNet.Facebook.Models
@model MyAppUser
@{
    ViewBag.Title = "Home Page";
}


<script src="@Url.Content("~/Scripts/ApplicationScripts/AjaxCalls.js")"></script>

<article class="intro">
    <span id="profilePicture">
        @if (Model.ProfilePicture != null && Model.ProfilePicture.Data != null)
        {
            <img src="@Model.ProfilePicture.Data.Url" />
        }
    </span>
    <h3>Welcome @Model.Name</h3>
    <label>Email: @Model.Email</label>
</article>

<article id="content">
    <div class="left">
        <h4>Cadastre sua especialidade !</h4>
        <br>
        @Html.Label("História")
        <input type="checkbox" name="historia" value="História">
        <br>
        @Html.Label("Geografia")
        <input type="checkbox" name="geografia" value="Geografia">
        <br>
        @Html.Label("Biologia")
        <input type="checkbox" name="biologia" value="Biologia">
        <br>
        @Html.Label("Sociologia")
        <input type="checkbox" name="sociologia" value="Sociologia">
        <br>
        @Html.Label("Filosofia")
        <input type="checkbox" name="filosofia" value="Filosofia">
        <br>
        @Html.Label("Matemática")
        <input type="checkbox" name="matematica" value="Matemática">
        <br>
        @Html.Label("Literatura")
        <input type="checkbox" name="literatura" value="Literatura">
        <br>
        @Html.Label("Gramática")
        <input type="checkbox" name="gramatica" value="Gramática">
        <br>
        @Html.Label("Física")
        <input type="checkbox" name="fisica" value="Física">
        <br>
        @Html.Label("Química")
        <input type="checkbox" name="quimica" value="Química">
        <br>
        @Html.Label("Política")
        <input type="checkbox" name="politica" value="Política">
        <br>
        @Html.Label("Música")
        <input type="checkbox" name="musica" value="Música">
        <br>
        @Html.Label("Cinema")
        <input type="checkbox" name="cinema" value="Cinema">
    </div>
    <div class="right">
        <h4>Palavra Chave</h4>
        @Html.TextBox("ParametroBusca1")
        <br>
        @Html.TextBox("ParametroBusca2")
        <br>
        @Html.TextBox("ParametroBusca3")
        <br>

        <a href="@Url.Action("Search", new {palavraChave = "Qualquer coisa" })"
           title="Buscar">
            <img src="data:image/png;base64," />
        </a>
    </div>
</article>